extends base

block content
    div#videoContainer(data-id=video._id)
        div.videobox(data-id=video._id)
            video(src="/" + video.fileUrl)
            div#videoControls.videoControls
                div.videoControls__play
                    span#play.videoControls__playBtn
                        i.fas.fa-play
                    div.videoControls__time
                        span#currenTime 00:00
                        span  / 
                        span#totalTime 00:00
                input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
                div.videoControls__volume
                    input(type="range",step="0.1", value=0.5, min="0", max="1")#volume
                    span#mute
                        i.fas.fa-volume-up
                div
                    span#fullScreen
                        i.fas.fa-expand
        div.videoinfo
            h2=video.title
            div.videoUploader
                a(href=`/users/${video.owner._id}`)=video.owner.name
            div.videouploadinfo
                span 조회수 #{video.meta.views}회
                span=new Date(video.createdAt).toLocaleDateString("ko-kr", {weekday: 'long', year:'numeric', month:'long', day:'numeric'})
                p=video.description
        div.videosetting
            if String(video.owner._id) === String(loggedInUser._id)
                a(href=`${video.id}/edit`) Edit Video &rarr;
                br
                a(href=`${video.id}/delete`) Delete Video &rarr;
        if loggedIn 
            div.video__comments
                form.video__comment-form#commentForm
                    textarea(cols="30", rows="10", placeholder="Write a nice comment...")
                    button Add Comment


block scripts
    script(src="/static/js/videoPlayer.js") 
    if loggedIn
        script(type="application/octet-stream" src="/static/js/commentSection.js")
    